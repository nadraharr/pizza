<header class="header">
  <nav class="header__nav container">
    <div class="header__nav-menu">
      <%= link_to root_path, class: "header__nav-logo" do %>
        <%= image_tag 'logo.png', alt: 'Pizzeria logo' %>
      <% end %>
      <ul class="header__nav-list">
        <li class="header__nav-item">
          <%= link_to "Menu", root_path %>
        </li>
        <li class="header__nav-item">
          <a href="#">About us</a>
        </li>
        <li class="header__nav-item">
          <a href="#">Contacts</a>
        </li>
      </ul>
      <% if current_user && policy(User).index? %>
        <ul class="header__nav-list">
          <li class="header__nav-item">
            <%= link_to 'Users', users_path %>
          </li>
          <li class="header__nav-item">
            <%= link_to 'New meal', new_meal_path %>
          </li>
          <li class="header__nav-item">
            <%= link_to 'Orders', orders_path %>
          </li>
        </ul>
      <% end %>
      <div class="nav-icons">
        <%= link_to cart_path, class: "cart-icon" do %>
          <%= image_tag 'cart.svg', alt: 'Cart icon' %>
        <% end %>
        <button type="button" class="header__menu-btn">
          <span class="header__navicon"></span>
        </button>
      </div>
      <ul class="header__nav-list">
        <% if user_signed_in? %>
          <li class="header__nav-item">
            <%= link_to edit_user_registration_path do %>
              <i class="fas fa-user-cog" aria-label="user settings"></i>
            <% end %>
          </li>
          <li class="header__nav-item">
            <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
              <i class="fa fa-sign-out" aria-label="log out"></i>
            <% end %>
          </li>
        <% else %>
          <li class="header__nav-item">
            <%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt" aria-label="sign in"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
<% if notice.present? %>
  <p class="notice"><%= notice %></p>
<% elsif alert.present? %>
  <p class="alert"><%= alert %></p>
<% end %>