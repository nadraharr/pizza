<article class="pizzeria-menu__item">
  <div class="pizzeria-menu__item-image">
    <%= image_tag("pizzas/#{meal.title}.webp", alt: "#{meal.title} Pizza") rescue image_tag("pizzas/12.webp", alt: 'Placeholder image') %>
  </div>
  <div class="pizzeria-menu__item-description">
    <p class="pizzeria-menu__item-ingredients">
      <%= meal.ingredients.join(", ") %>
    </p>
    <p class="pizzeria-menu__item-title"><%= meal.title %></p>
    <div class="counter">
      <button class="counter__button" id="decrease"></button>
      <div class="counter__display" id="count">0</div>
      <button class="counter__button" id="increase"></button>
    </div>
    <p class="pizzeria-menu__item-price">
      <%= meal.price %>$ 
    </p>
    <%= link_to 'Edit', edit_meal_path(meal) %>
    <%= link_to 'Destroy', meal, data: {turbo_method: :delete} %>
  </div>
</article>